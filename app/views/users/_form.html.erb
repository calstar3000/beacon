<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render "fields", f: f %>
      <%= f.submit "Sign me up!", class: "btn btn-medium btn-primary submit-button" %>
    <% end %>
    <br />
    <p>Already using Beacon? <%= link_to "Sign in now!", signin_path %></p>
  </div>
</div>